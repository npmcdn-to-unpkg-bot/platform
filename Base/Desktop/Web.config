<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="allors" connectionString="server=(local);database=base;Integrated Security=SSPI" />
  </connectionStrings>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="dataPath" value="../Data" />
    <add key="aspnet:MaxJsonDeserializerMembers" value="150000" />
    <!-- Set production to false for dev/test -->
    <add key="production" value="false" />
  </appSettings>
 
  <system.web>
    <!-- For production/test enable windows authentication -->
    <!--
    <authentication mode="Windows" />
    -->
    
    <!-- For production/test disable forms authentication -->
    <authentication mode="Forms">
      <forms loginUrl="/Local/login" />
    </authentication>
    
    <membership defaultProvider="AllorsMembershipProvider">
      <providers>
        <clear />
        <add name="AllorsMembershipProvider" type="Allors.Web.Security.AllorsMembershipProvider" />
      </providers>
    </membership>
    
    <roleManager enabled="true" defaultProvider="AllorsRoleProvider">
      <providers>
        <clear />
        <add name="AllorsRoleProvider" type="Allors.Web.Security.AllorsRoleProvider" />
      </providers>
    </roleManager>
    
    <compilation debug="true" targetFramework="4.6" />
    <httpRuntime targetFramework="4.6" maxRequestLength="1048576" executionTimeout="300" />
    <sessionState timeout="720" />
    <customErrors mode="Off" />
  </system.web>
  
  <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="1073741824" />
      </requestFiltering>
    </security>
    
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
  
  <system.net>
    <mailSettings>
      <!-- Send mail over smtp -->
      <smtp deliveryMethod="Network" from="support@inxin.com">
        <network host="smtp" />
      </smtp>
      <!-- Send mail to folder -->
      <!--<smtp deliveryMethod="SpecifiedPickupDirectory">
        <specifiedPickupDirectory pickupDirectoryLocation="c:\Temp\Smtp"/>
      </smtp>-->
    </mailSettings>
  </system.net>
  
  <runtime>
