@using Allors.Web.Mvc.Helpers
@using Website.OrganisationMvc
@model Edit
@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <br/><br/>
    @using (Html.BeginForm("Edit", "Organisation", FormMethod.Post, htmlAttributes: new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <h2>Wijzig een persoon</h2>
        <hr/>
        @Html.ValidationSummary("", new {@class = "text-danger"})
        @Html.Allors().EditorForModel()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success" name="command" value="@Command.Save">Save</button>
                <button type="submit" class="btn btn-danger" name="command" value="@Command.Cancel">Cancel</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
