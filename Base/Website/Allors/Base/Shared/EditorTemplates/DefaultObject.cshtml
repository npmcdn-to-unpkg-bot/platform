@using Allors.Web.Mvc.Helpers
@using Allors.Web.Mvc.Models
@model dynamic

@foreach (var property in ViewData.ModelMetadata.Properties.Where(p => p.ShowForEdit))
{
    if (property.TemplateHint == "HiddenInput")
    {
        @Html.Hidden(property.PropertyName)
    }
    else
    {
        @Html.Label(property.PropertyName)
        if (property.ModelType == typeof(Select))
        {
            @Html.Editor(property.PropertyName, "BootstrapSelect")
        }
        else if (property.ModelType == typeof(MultipleSelect))
        {
            @Html.Editor(property.PropertyName, "BootstrapMultipleSelect")
        }
        else
        {
            @Html.Editor(property.PropertyName, new { htmlAttributes = new { @class = "form-control", placeholder = ViewData.ModelMetadata.Watermark } })
        }
        @Html.ValidationMessage(property.PropertyName)
    }
}