unit(unit) ::= <<
    public partial class Meta$unit.Name$ : MetaUnit
	{
	    public static Meta$unit.Name$ Instance { get; internal set;}

		public override Unit Unit { get; }

		internal Meta$unit.Name$(MetaPopulation metaPopulation)
        {
			this.Unit = new Unit(metaPopulation)
			{
				Id = UnitIds.$unit.Name$,
				UnitTag = UnitTags.$unit.Name$,
				SingularName = UnitNames.$unit.Name$
			};
        }
	}
>>


