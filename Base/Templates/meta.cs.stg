interface(interface) ::= <<
    public partial class Meta$interface.Name$ : MetaInterface
	{
	    public static Meta$interface.Name$ Instance { get; internal set;}

		public override Interface Interface { get; }
		
		// Defined Roles
$interface.DefinedProperties:{property|         public RoleType $property.Name$;}; separator="\n"$

		// Inherited Roles
$interface.InheritedProperties:{property|         public RoleType $property.Name$;}; separator="\n"$

		// Defined Associations
$interface.DefinedReverseProperties:{property|         public AssociationType $property.DefiningType.Name$Where$property.Name$;}; separator="\n"$

		// Inherited Associations
$interface.ImplementedReverseProperties:{property|         public AssociationType $property.DefiningType.Name$Where$property.Name$;}; separator="\n"$

		internal Meta$interface.Name$(MetaPopulation metaPopulation)
        {
			this.Interface = new Interface(metaPopulation)
			{
				Id = new System.Guid("$interface.AttributeByName.Id.Value$"),
				SingularName = "$interface.Name$",
				$if(interface.AttributeByName.Plural)$PluralName = "$interface.AttributeByName.Plural.Value$"$endif$
			};
        }
	}
>>

